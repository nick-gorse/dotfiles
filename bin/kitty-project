#!/usr/bin/env zsh
set -euo pipefail

SESS_DIR="$HOME/.config/kitty/sessions"

launch() {
  nohup kitty "$@" >/dev/null 2>&1 &
  disown
}

if [[ -n "${1:-$DCS_PROJ_NAME}" ]]; then
  launch --session "${SESS_DIR}/${1:-$DCS_PROJ_NAME}.session"
fi

cwd="$(pwd -P)"
